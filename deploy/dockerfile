FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# install system packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    nginx \
    supervisor \
    gettext \
    && rm -rf /var/lib/apt/lists/*

# create a non-root user for Django process
RUN useradd -ms /bin/bash appuser

WORKDIR /app

# install python deps
COPY requirements.txt /app/
RUN pip install --upgrade pip && pip install -r requirements.txt

# copy project
COPY . /app

# copy deployment config
COPY deploy/nginx.conf /etc/nginx/conf.d/default.conf
COPY deploy/supervisod.conf /etc/supervisor/supervisod.conf
COPY deploy/app_supervisor.conf /etc/supervisor/conf.d/app_supervisor.conf
COPY deploy/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# static location served by nginx
RUN mkdir -p /vol/static && chown -R www-data:www-data /vol/static

EXPOSE 80

# run the entrypoint (runs collectstatic then supervisord)
CMD ["/entrypoint.sh"]
